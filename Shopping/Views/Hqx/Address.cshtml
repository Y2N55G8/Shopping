
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_UserCentered.cshtml";
}

@*新增地址*@
<!--标题 -->
<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-danger am-text-lg">地址管理</strong> / <small>Address&nbsp;list</small></div>
</div>
<hr />
<ul class="am-avg-sm-1 am-avg-md-3 am-thumbnails">
    <li class="user-addresslist defaultAddr">
        <span class="new-option-r"><i class="am-icon-check-circle"></i>默认地址</span>
        <p class="new-tit new-p-re">
            <span class="new-txt">小叮当</span>
            <span class="new-txt-rd2">159****1622</span>
        </p>
        <div class="new-mu_l2a new-p-re">
            <p class="new-mu_l2cw">
                <span class="title">地址：</span>
                <span class="province">湖北</span>省
                <span class="city">武汉</span>市
                <span class="dist">洪山</span>区
                <span class="street">雄楚大道666号(中南财经政法大学)</span>
            </p>
        </div>
        <div class="new-addr-btn">
            <a href="#"><i class="am-icon-edit"></i>编辑</a>
            <span class="new-addr-bar">|</span>
            <a href="javascript:void(0);" onclick="delClick(this);"><i class="am-icon-trash"></i>删除</a>
        </div>
    </li>
    <li class="user-addresslist">
        <span class="new-option-r"><i class="am-icon-check-circle"></i>设为默认</span>
        <p class="new-tit new-p-re">
            <span class="new-txt">小叮当</span>
            <span class="new-txt-rd2">159****1622</span>
        </p>
        <div class="new-mu_l2a new-p-re">
            <p class="new-mu_l2cw">
                <span class="title">地址：</span>
                <span class="province">湖北</span>省
                <span class="city">武汉</span>市
                <span class="dist">洪山</span>区
                <span class="street">雄楚大道666号(中南财经政法大学)</span>
            </p>
        </div>
        <div class="new-addr-btn">
            <a href="#"><i class="am-icon-edit"></i>编辑</a>
            <span class="new-addr-bar">|</span>
            <a href="javascript:void(0);" onclick="delClick(this);"><i class="am-icon-trash"></i>删除</a>
        </div>
    </li>
</ul>
<div class="clear"></div>
<a class="new-abtn-type" data-am-modal="{target: '#doc-modal-1', closeViaDimmer: 0}">添加新地址</a>
<!--新增地址子页面-->
<div class="am-modal am-modal-no-btn" id="doc-modal-1">
    <div class="add-dress">
        <!--标题 -->
        <div class="am-cf am-padding">
            <div class="am-fl am-cf"><strong class="am-text-danger am-text-lg">新增地址</strong> / <small>Add&nbsp;address</small></div>
        </div>
        <hr />
        <div class="am-u-md-12 am-u-lg-8" style="margin-top: 20px;">
            <form class="am-form am-form-horizontal">
                <div class="am-form-group">
                    <label for="name" class="am-form-label">收货人</label>
                    <div class="am-form-content">
                        <input type="text" id="name" placeholder="收货人">
                    </div>
                </div>
                <div class="am-form-group">
                    <label for="user-address" class="am-form-label">所在地</label>
                    <div class="am-form-content address">
                        <select id="province" data-am-selected>
                            <option value="浙江省">浙江省</option>
                            <option value="湖北省" selected>湖北省</option>
                        </select>
                        <select id="city" data-am-selected>
                            <option value="温州市">温州市</option>
                            <option value="武汉市" selected>武汉市</option>
                        </select>
                        <select id="region" data-am-selected>
                            <option value="瑞安区">瑞安区</option>
                            <option value="洪山区" selected>洪山区</option>
                        </select>
                    </div>
                </div>
                <div class="am-form-group">
                    <label for="user-intro" class="am-form-label">详细地址</label>
                    <div class="am-form-content">
                        <textarea class="" rows="3" id="user-intro" placeholder="输入详细地址"></textarea>
                    </div>
                </div>
                <div class="am-form-group">
                    <label for="user-phone" class="am-form-label">手机号码</label>
                    <div class="am-form-content">
                        <input id="user-phone" placeholder="手机号必填" type="email">
                    </div>
                </div>
                <div class="am-form-group">
                    <label for="user-email" class="am-form-label">电子邮箱</label>
                    <div class="am-form-content">
                        <input type="text" id="user-email" placeholder="电子邮箱">
                    </div>
                </div>
                <div class="am-form-group">
                    <label for="email-code" class="am-form-label">邮政编码</label>
                    <div class="am-form-content">
                        <input type="text" id="email-code" placeholder="邮政编码">
                    </div>
                </div>
                <div class="am-form-group">
                    <label for="address-default" class="am-form-label">默认地址</label>
                    <div class="am-form-content">
                        <input type="checkbox" id="address-default" />
                    </div>
                </div>
                <div class="am-form-group">
                    <div class="am-u-sm-9 am-u-sm-push-3">
                        <a id="btnSave" class="am-btn am-btn-danger">保存</a>
                        <a href="javascript: void(0)" class="am-close am-btn am-btn-danger" data-am-modal-close>取消</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#btnSave").click(function () {
            //收货人
            var name = $("#name").val();
            //收货地址
            var address = $("#province").val() + $("#city").val()
                + $("#region").val() + $("#user-intro").val();
            //手机号码
            var phone = $("#user-phone").val();
            //电子邮件
            var email = $("#user-email").val();
            //邮政编码
            var emailcode = $("#email-code").val();
            //是否为默认地址
            var ismain = 2;
            if ($("#address-default").is(':checked')) {
                ismain = 1;
            }
            $.ajax({
                url: "/Hqx/InsertAddress",
                type: "POST",
                data: { name: name, address: address, phone: phone, email: email, emailcode: emailcode },
                success: function (result) {
                    console.log(result);
                }
            })
        })
    </script>    
}

